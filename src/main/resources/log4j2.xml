<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="ConsoleAppender" target="SYSTEM_OUT">
			<PatternLayout pattern="%d [%t] %-5level %c{1.} - %msg%n%throwable"/>
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="client" additivity="false" level="debug">
			<AppenderRef ref="ConsoleAppender"/>
		</Logger>
		<Logger name="server" additivity="false" level="debug">
			<AppenderRef ref="ConsoleAppender"/>
		</Logger>
		<Logger name="source" additivity="false" level="debug">
			<AppenderRef ref="ConsoleAppender"/>
		</Logger>
		<Logger name="org.springframework.web" additivity="false" level="debug">
			<AppenderRef ref="ConsoleAppender"/>
		</Logger>
		<Logger name="org.springframework.http" additivity="false" level="debug">
			<AppenderRef ref="ConsoleAppender"/>
		</Logger>
		<Root level="INFO">
			<AppenderRef ref="ConsoleAppender"/>
		</Root>
	</Loggers>
</Configuration>